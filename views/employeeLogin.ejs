<html>

<head>
	<title>Employee - Login</title>
	<meta name="viewport" content="width=device-width, initial-scale=1"> 

	<link rel="stylesheet" type="text/css" href="/styles/master.css">
	<link rel="stylesheet" type="text/css" href="/styles/employeeLogin.css">

	<script type="text/javascript" src="/libs/jquery-3.3.1.js" defer></script>
	<script type="text/javascript" src="/scripts/master.js" defer></script>
	<script type="text/javascript" src="/scripts/employeeLogin.js" defer></script>
</head>

<body>

	<div class="header">
		<h1 class="primary-message">Employee Login</h1>
	</div>
		
	<div id="main" class="main">
		<div id="error" <% if (!locals.errorMessage || (locals.errorMessage === "")) { %> class="hidden" <% } %>>
			<h4 id="errorMessage" class="error-message">
				<% if (locals.errorMessage && (locals.errorMessage !== "")) { %>
					<%= locals.errorMessage %>
				<% } %>
			</h4>
		</div>

		<div class="employeeDetailWrapper">
			<table id="employeeDetails">
				<tbody>
					<tr class="hidden">
						<td>ID:</td>
						<td>
							<input type="hidden" name="employeeId" value="<% if (locals.employee && locals.employee.id) { %><%= locals.employee.id %><% } %>" />
						</td>
					</tr>
					<tr>
						<td class="label">Lookup Code:</td>
						<td>
							<input type="text" name="employeeLookupCode" value="<% if (locals.employee && locals.employee.lookupCode) { %><%= locals.employee.lookupCode %><% } %>" class="update" />
						</td>
					</tr>
					<tr>
						<td class="label">Password:</td>
						<td>
							<input type="number" name="employeePassword" value="<% if (locals.employee && locals.employee.Password) { %><%= locals.employee.Password.toString() %><% } %>" class="update" />
						</td>
					</tr>
				</tbody>
			</table>
		</div>

		<div class="employeeActionsWrapper">
			<br />
			<div id="deleteActionContainer" <% if (!locals.employee || !locals.employee.id || (locals.employee.id.trim() === "")) { %>class="hidden"<% } %>>
				<button id="deleteButton" type="button" class="action">Delete</button>
				<br />
				<br />
			</div>
			<button id="loginButton" type="button" class="action">Login</button>
		</div>

		<div id="employeeSavedAlertModal" class="modal animate-opacity-show">
			<div class="modal-content">
				<div class="container gray-blue">
					<h1>
						<span>employee</span><br />
						<span>Logging in</span>
					</h1>
				</div>
			</div>
		</div>
	</div>
		
</body>

</html>